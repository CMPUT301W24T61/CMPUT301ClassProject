<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".SaveUserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView_register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Create Profile"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src ="@drawable/ic_logo_round"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/textView_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_logo"
            android:text="Full Name*"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="20dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/editText_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First and Last Name"
            android:inputType="textPersonName"
            android:textSize="16dp"
            android:padding="6dp"
            android:layout_below="@id/textView_register_name"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/textView_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_name"
            android:text="Your Email*"
            android:textColor="#555555"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editText_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="e.g. johndoe@gmail.com"
            android:textSize="16dp"
            android:padding="6dp"
            android:layout_below="@id/textView_register_email"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/textView_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_email"
            android:text="Homepage*"
            android:textColor="#555555"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editText_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="xxxxxxxxx"
            android:textSize="16dp"
            android:padding="6dp"
            android:layout_below="@id/textView_homepage"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/textView_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_homepage"
            android:text="Mobile*"
            android:textColor="#555555"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editText_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="xxxxxxxxx"
            android:textSize="16dp"
            android:padding="6dp"
            android:layout_below="@id/textView_mobile"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/textView_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_mobile"
            android:text="Select Role(s) that Apply *"
            android:textColor="#555555"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <CheckBox android:id="@+id/checkbox_attendee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_role"
            android:text="I am an Attendee" />

        <CheckBox android:id="@+id/checkbox_organizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_attendee"
            android:text="I Organize Events"/>

        <CheckBox android:id="@+id/checkbox_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_organizer"
            android:text="I am an Administrator" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_admin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/amber"
            android:textColor="@color/black"
            android:text="Save Profile" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_register"
            android:elevation="10dp"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>


