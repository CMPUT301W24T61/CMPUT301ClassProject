<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"

        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="180dp"
            app:srcCompat="@drawable/ic_logo_round"
            android:background="@drawable/circle"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/textView_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_logo"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_main_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_app_name"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/welcome_text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_browse_events"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_main_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FFAE42"
            android:text="Check/Create Events"
            android:textColor="#FF000000"
            app:iconTint="#FF000000" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_browse_events"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFAE42"
            android:text="Create Profile"
            android:textColor="#FF000000" />

        <Button
            android:id="@+id/button_scan_qr"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFAE42"
            android:text="Scan QR"
            android:textColor="#FF000000" />

        <ImageView
            android:id="@+id/button_open_camera"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/button_scan_qr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_cam"
            android:elevation="4dp"/>

    </RelativeLayout>

</ScrollView>