<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageButton
        android:id="@+id/BackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingLeft="14dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="go back to previous page"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="56dp">

        <TextView
            android:id="@+id/event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="Event Status"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <!-- Event Details TextViews -->
        <TextView
            android:id="@+id/tvEventID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_status"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="Event ID: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEventID"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="Event Name: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEventName"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="Start Time: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStartTime"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="End Time: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEndTime"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="Venue: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVenue"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="Attendance: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Round Buttons -->
        <ImageButton
            android:id="@+id/button_notifications"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tvAttendance"
            android:layout_marginTop="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/amber"
            android:src="@drawable/ic_create_notification"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/button_announce"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tvAttendance"
            android:layout_marginTop="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/button_notifications"
            android:background="@drawable/rounded_button"
            android:text="2"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/button_map"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tvAttendance"
            android:layout_marginTop="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/button_announce"
            android:background="@drawable/rounded_button"
            android:text="3"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/button_attendees"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tvAttendance"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/button_map"
            android:background="@drawable/rounded_button"
            android:text="4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/turqoise"
            android:gravity="center"
            android:padding="16dp"
            android:text="Event Dashboard"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>




