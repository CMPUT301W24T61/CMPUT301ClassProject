<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/turqoise"
        android:gravity="center"
        android:padding="16dp"
        android:text="Event QR Codes"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingLeft="14dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="go back to previous page"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ivCheckInQRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_placeholder_background"
        android:contentDescription="qr code" />

    <TextView
        android:id="@+id/tvCheckInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivCheckInQRCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Check-In"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivPromotionQRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/ivCheckInQRCode"
        android:layout_alignEnd="@id/ivCheckInQRCode"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_placeholder_background"
        android:contentDescription="promotion_qr_code" />

    <TextView
        android:id="@+id/tvPromotionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPromotionQRCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Promotion"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPromotionLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/amber"
        android:scaleType="fitCenter"
        android:text="Share QR Codes"
        android:textColor="@color/black"
        android:padding="10dp"/>

</RelativeLayout>

